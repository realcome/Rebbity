<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- NOTE: Hide buttons to simplify the UI. Users can touch outside the dialog to
         dismiss it. -->
    <!-- NOTE: ListPreference's summary should be set to its value by the activity code. -->
    <ListPreference
        android:key="list_sort_by_time"
        android:title="@string/perf_title_sort_by_time"
        android:entries="@array/pref_items_title_sort_by_time"
        android:entryValues="@array/pref_items_value_sort_by_time"
        android:defaultValue="0"
        android:negativeButtonText="@null"
        android:positiveButtonText="@null" />

    <SwitchPreference
        android:key="list_sort_by_tag"
        android:title="@string/perf_title_sort_by_tag"
        android:summary="@null"
        android:defaultValue="false" />
</PreferenceScreen>
