<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.rebbity.cn"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="15"
        android:targetSdkVersion="21" />

    <application
        android:allowBackup="true"
        android:name="com.rebbity.cn.RebbityApp"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.rebbity.cn.StartActivity"
            android:label="@string/app_name"
            android:theme="@style/AppFullScreen" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.rebbity.cn.GuideActivity"
            android:theme="@style/AppFullScreen" >
        </activity>
        <activity
            android:name="com.rebbity.cn.SplashActivity"
            android:theme="@style/AppFullScreen" >
        </activity>

    </application>

</manifest>
